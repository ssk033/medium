generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ✅ USER MODEL (NextAuth Compatible)
//    - id MUST be String (cuid) because OAuth providers return STRING IDs
//    - emailVerified is required by PrismaAdapter
//
model User {
  id            String   @id @default(cuid())      // <- string id (important)
  name          String?
  username      String?  @unique
  email         String?  @unique
  emailVerified DateTime?
  password      String?
  image         String?
  provider      String?

  blogs    Blog[]
  likes    Like[]
  comments Comment[]

  accounts Account[]
  sessions Session[]

  // Follow relationships
  followers Follow[] @relation("UserFollowing")  // People who follow this user (where followingId = this user's id)
  following Follow[] @relation("UserFollowers")  // People this user follows (where followerId = this user's id)
}

//
// ✅ BLOG MODEL
//
model Blog {
  id        Int      @id @default(autoincrement())
  authorID  String   // <-- must match User.id type (String)
  content   String
  title     String
  published Boolean  @default(false)
  mediaUrls String[] @default([]) // Array of image/video URLs
  createdAt DateTime @default(now())

  author   User      @relation(fields: [authorID], references: [id])
  likes    Like[]
  comments Comment[]
}

//
// ✅ LIKE MODEL (One User can like only once)
//
model Like {
  id     Int    @id @default(autoincrement())
  blogId Int
  userId String   // <-- must be String

  blog Blog @relation(fields: [blogId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([blogId, userId])
}

//
// ✅ COMMENT MODEL
//
model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  blogId    Int
  userId    String   // <-- must be String
  createdAt DateTime @default(now())

  blog Blog @relation(fields: [blogId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

//
// ✅ ACCOUNT MODEL (NextAuth)
//    - userId must be String because User.id is String
//
model Account {
  id                Int    @id @default(autoincrement())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token     String? @db.Text   // ✅ correct way to use Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

//
// ✅ SESSION MODEL (NextAuth)
//
model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       String   // <-- must be String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

//
// ✅ VERIFICATION TOKEN (NextAuth)
//
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

//
// ✅ FOLLOW MODEL (User follows another user)
//
model Follow {
  id          Int      @id @default(autoincrement())
  followerId  String   // User who follows
  followingId String   // User being followed
  createdAt   DateTime @default(now())

  follower  User @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)   // User who follows
  following User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade) // User being followed

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}
